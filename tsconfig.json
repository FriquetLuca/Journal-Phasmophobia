{
  "type": "commonjs",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2016",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": "src",
    "strict": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
  ]
}